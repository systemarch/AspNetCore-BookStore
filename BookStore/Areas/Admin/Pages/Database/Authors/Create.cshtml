@page
@model BookStore.Areas.Admin.Pages.Database.Authors.CreateModel
@{
    ViewData["Title"] = "Create Author";
}

<div class="row">
    <div class="col-md-12">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="form-group col-md-4">
                    <div class="form-group">
                        <label asp-for="PhotoImageFile" class="control-label"></label>
                        <input type="file" accept="image/*" asp-for="PhotoImageFile" class="form-control" />
                        <span asp-validation-for="PhotoImageFile" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PhotoImageUrl" class="control-label"></label>
                        <input asp-for="PhotoImageUrl" class="form-control" />
                        <span asp-validation-for="PhotoImageUrl" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group col-md-8">
                    <div class="form-group row">
                        <div class="col-sm-12">
                            <label asp-for="Author.Name" class="control-label"></label>
                            <input asp-for="Author.Name" class="form-control" />
                            <span asp-validation-for="Author.Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-6">
                            <label asp-for="Author.DateOfBirth" class="control-label"></label>
                            <input asp-for="Author.DateOfBirth" class="form-control" />
                            <span asp-validation-for="Author.DateOfBirth" class="text-danger"></span>
                        </div>
                        <div class="col-sm-6">
                            <label asp-for="Author.DateOfDeath" class="control-label"></label>
                            <input asp-for="Author.DateOfDeath" class="form-control" />
                            <span asp-validation-for="Author.DateOfDeath" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-12">
                            <label asp-for="Author.Website" class="control-label"></label>
                            <input asp-for="Author.Website" class="form-control" />
                            <span asp-validation-for="Author.Website" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <textarea rows="13" placeholder="Biography" asp-for="Author.Biography" class="form-control"></textarea>
                <span asp-validation-for="Author.Biography" class="text-danger"></span>
            </div>
            <div class="row justify-content-end">
                <div class="form-group">
                    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>
